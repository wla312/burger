  
<div class="container">
  <div class="jumbotron">
    <h1 class="font-effect-shadow-multiple">Eat Da Burgahhh</h1>

    <p>Manage Your Appetite for Burgers with this App</p>

    <img src="assets/images/bobsburgersbackground.jpeg" alt="Bob's Burgers">
  </div>

  <!-- <div class="container"> -->
    <div class="col-sm-5">
      <!-- Pass in data from server.js -->
      <h2>Burgers Ready to Eat</h2>

      <ul>
        {{#each burgers}}
        	{{#unless devoured}}
      	  	<li>
      	  		<p>{{this.id}}.{{this.burger_name}}
                <button data-id="{{this.id}}" class="btn btn-danger change-devour">Devour</button>
              </p>
      	      

      	      
      	  	</li>
        	{{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-2">
    </div>

    <div class="col-sm-5">
      <h2>Burgers I've Devoured</h2>

      <ul>
        {{#each burgers}}
        	{{#if devoured}}
      	  	<li>
      	  		<p>{{this.id}}.{{this.burger_name}}</p>
      	  	</li>
        	{{/if}}
        {{/each}}
      </ul>
    </div>
  <!-- </div> -->


  <div class="container" id="addform">
    <div class="col-sm-12">
      <h2>Add a Burger</h2>

      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" name="burger-name">
        </div>

        <button class="btn btn-danger" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>